{
	"name": "aluminum-ui",
	"version": "0.0.3-beta.1",
	"description": "Clean Performant Component Library built on aluminum-box",
	"main": "build/lib/index.js",
	"types": "build/lib/index.d.ts",
	"files": [
		"build/lib"
	],
	"author": "Evan Hennessy <contact@hennessyevan.com>",
	"license": "MIT",
	"jest": {
		"verbose": true,
		"testURL": "http://localhost/",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"devDependencies": {
		"@storybook/addon-info": "^3.4.10",
		"@storybook/addon-knobs": "^3.4.10",
		"@storybook/react": "^3.4.0",
		"@types/jest": "^22.2.2",
		"@types/react": "^16.3.5",
		"@types/react-test-renderer": "^16.0.2",
		"@types/storybook__addon-info": "^3.2.3",
		"@babel/preset-typescript": "^7.0.0",
		"babel-plugin-styled-components": "^1.6.2",
		"@types/storybook__addon-knobs": "^3.3.1",
		"@types/storybook__react": "^3.0.8",
		"awesome-typescript-loader": "^4.0.1",
		"babel-core": "^6.26.0",
		"cpx": "^1.5.0",
		"jest": "^22.4.3",
		"jest-styled-components": "^5.0.1",
		"react-docgen-typescript-webpack-plugin": "^1.1.0",
		"react-test-renderer": "^16.4.2",
		"storybook-addon-jsx": "^5.3.0",
		"styled-components": "^3.4.2",
		"ts-jest": "^22.4.2",
		"typescript": "^3.1.0-dev.20180810"
	},
	"dependencies": {
		"@types/lodash": "^4.14.116",
		"@types/node": "^10.5.7",
		"clean-tag": "^2.0.0",
		"aluminum-box": "0.1.0-beta.0",
		"lodash": "^4.17.10",
		"react": "^16.3.1",
		"react-dom": "^16.3.1"
	},
	"peerDependencies": {
		"styled-components": "^4.0.0-beta.0"
	},
	"scripts": {
		"start": "yarn storybook",
		"storybook": "start-storybook -p 6006 -c .storybook",
		"test": "yarn jest --watch",
		"build": "yarn build-lib && build-storybook",
		"build-lib": "tsc && yarn copy-css-to-lib",
		"build-storybook": "build-storybook",
		"copy-css-to-lib": "cpx \"./src/**/*.css\" ./build/lib"
	}
}
