{
  "name": "@hennessyevan/aluminum-ui",
  "version": "0.3.0",
  "description": "React UI Kit fork of evergreen",
  "contributors": [
    "Evan Hennessy (https://hennessyevan.com/)"
  ],
  "keywords": [
    "aluminum",
    "ui",
    "react"
  ],
  "repository": "hennessyevan/aluminum-ui",
  "license": "MIT",
  "main": "dist/plugin.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "start": "yarn dev",
    "test": "yarn run tslint && xo && nyc ava",
    "tslint": "tslint -c tslint.json 'src/**/src/*.ts'",
    "prepublishOnly": "rm -rf lib && yarn run build",
    "dev": "start-storybook -p 6006",
    "coverage": "nyc report --reporter=html",
    "create-package": "./tools/create-package.js",
    "create-package:components": "./tools/create-package-components.js",
    "create-docs-template": "./tools/create-docs-template.js",
    "build": "tsc --declaration",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "clean": "git clean -Xdf",
    "release": "np --no-publish",
    "chromatic": "chromatic test --storybook-addon --script-name dev --app-code=alj8xoz1ujt"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@blueprintjs/icons": "^2.2.1",
    "@hennessyevan/aluminum-box": "^2.0.1",
    "@hennessyevan/react-tiny-virtual-list": "^2.2.1",
    "arrify": "^1.0.1",
    "classnames": "^2.2.6",
    "downshift": "^1.16.0",
    "emotion": "^9.2.8",
    "exenv": "^1.2.2",
    "fuzzaldrin-plus": "^0.6.0",
    "glamor": "^2.20.40",
    "is-hotkey": "^0.1.4",
    "lodash": "^4.17.11",
    "no-scroll": "^2.1.1",
    "object-values": "^1.0.0",
    "prop-types": "^15.0.0",
    "react-autosize-textarea": "^5.0.0",
    "react-dropzone": "^8.0.1",
    "react-emotion": "^9.2.8",
    "react-scrollbar-size": "^2.0.2",
    "react-transition-group": "^2.2.1",
    "tinycolor2": "^1.4.1"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@reactions/component": "^2.0.2",
    "@storybook/addon-actions": "^3.2.17",
    "@storybook/addon-links": "^3.2.17",
    "@storybook/addon-options": "^3.2.17",
    "@storybook/addons": "^3.2.17",
    "@storybook/react": "^4.1.4",
    "@storybook/storybook-deployer": "^2.2.0",
    "@types/arrify": "^1.0.4",
    "@types/classnames": "^2.2.7",
    "@types/exenv": "^1.2.0",
    "@types/fuzzaldrin-plus": "^0.6.0",
    "@types/lodash": "^4.14.119",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "@types/react-transition-group": "^2.0.15",
    "@types/sinon": "^7.0.3",
    "@types/storybook__addon-options": "^4.0.0",
    "@types/storybook__react": "^4.0.0",
    "@types/tinycolor2": "^1.4.1",
    "ava": "^1.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.8",
    "babel-plugin-lodash": "^3.3.4",
    "babel-register": "^6.26.0",
    "concurrently": "^4.0.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.10.0",
    "execa": "^0.8.0",
    "faker": "^4.1.0",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "lodash-webpack-plugin": "^0.11.5",
    "nyc": "^13.0.1",
    "prettier": "^1.9.1",
    "react": "^16.7.0",
    "react-chromatic": "^0.7.10",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.4.2",
    "sinon": "^6.1.5",
    "size-limit": "^0.20.0",
    "starwars-names": "^1.6.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "tslint-xo": "^0.11.0",
    "typescript": "^3.2.2",
    "url-loader": "^0.6.2",
    "utility-types": "^3.2.1",
    "webpack": "^4.28.4",
    "xo": "^0.23.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "*.ts",
      "*.tsx"
    ],
    "prettier": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "object-curly-spacing": "off",
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "shorthandFirst": false,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.5.0"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "**/test/**/*.tsx?"
    ],
    "require": [
      "ts-node/register",
      "./tools/test-setup"
    ],
    "babel": "inherit"
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "200 KB"
    }
  ]
}
