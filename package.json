{
  "name": "@hennessyevan/aluminum-ui",
  "version": "0.2.56",
  "description": "React UI Kit fork of evergreen",
  "contributors": ["Evan Hennessy (https://hennessyevan.com/)"],
  "keywords": ["aluminum", "ui", "react"],
  "repository": "hennessyevan/aluminum-ui",
  "license": "MIT",
  "main": "lib/src/index.js",
  "files": ["lib/src"],
  "sideEffects": false,
  "scripts": {
    "start": "yarn dev",
    "test": "yarn run tslint && xo && nyc ava",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "rm -rf lib && yarn run build",
    "precommit": "lint-staged",
    "dev": "start-storybook -p 6006 -c .storybook",
    "coverage": "nyc report --reporter=html",
    "create-package": "./tools/create-package.js",
    "create-package:components": "./tools/create-package-components.js",
    "create-docs-template": "./tools/create-docs-template.js",
    "build": "tsc --declaration",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "build-commonjs":
      "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore stories,test,docs --source-maps inline",
    "build-esm":
      "BABEL_ENV=esm babel src --out-dir esm --ignore stories,test,docs --source-maps inline",
    "clean": "git clean -Xdf",
    "release": "np --no-publish",
    "chromatic":
      "chromatic test --storybook-addon --script-name dev --app-code=alj8xoz1ujt"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@blueprintjs/icons": "^2.2.1",
    "@hennessyevan/aluminum-box": "^2.0.0",
    "arrify": "^1.0.1",
    "classnames": "^2.2.5",
    "dom-helpers": "^3.2.1",
    "downshift": "^1.16.0",
    "draft-js": "^0.10.5",
    "emotion": "^9.2.8",
    "fuzzaldrin-plus": "^0.6.0",
    "glamor": "^2.20.40",
    "is-hotkey": "^0.1.4",
    "lodash.debounce": "^4.0.8",
    "lodash.findkey": "^4.6.0",
    "lodash.mapvalues": "^4.6.0",
    "no-scroll": "^2.1.1",
    "object-values": "^1.0.0",
    "prop-types": "^15.0.0",
    "react-autosize-textarea": "^5.0.0",
    "react-dropzone": "^8.0.1",
    "react-emotion": "^9.2.8",
    "react-scrollbar-size": "^2.0.2",
    "react-tiny-virtual-list": "^2.1.4",
    "react-transition-group": "^2.2.1",
    "slate": "^0.44.6",
    "slate-html-serializer": "^0.7.32",
    "slate-plain-serializer": "^0.6.33",
    "slate-react": "^0.21.12",
    "tinycolor2": "^1.4.1"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "@reactions/component": "^2.0.2",
    "@storybook/addon-actions": "^3.2.17",
    "@storybook/addon-links": "^3.2.17",
    "@storybook/addon-options": "^3.2.17",
    "@storybook/addons": "^3.2.17",
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/react": "^4.1.4",
    "@storybook/storybook-deployer": "^2.2.0",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.18",
    "@types/react-test-renderer": "^16.0.3",
    "@types/sinon": "^7.0.3",
    "ava": "^1.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^9.2.8",
    "babel-register": "^6.26.0",
    "concurrently": "^4.0.0",
    "enzyme": "^3.4.1",
    "eslint-config-prettier": "^2.9.0",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.10.0",
    "execa": "^0.8.0",
    "faker": "^4.1.0",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nyc": "^13.0.1",
    "prettier": "^1.9.1",
    "react": "^16.4.2",
    "react-chromatic": "^0.7.10",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "sinon": "^6.1.5",
    "size-limit": "^0.20.0",
    "starwars-names": "^1.6.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-react": "^3.6.0",
    "tslint-xo": "^0.11.0",
    "typescript": "^3.2.2",
    "url-loader": "^0.6.2",
    "xo": "^0.23.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": ["xo-react"],
    "envs": ["browser", "node"],
    "ignores": ["**/*.ts", "**/*.tsx"],
    "space": true,
    "semicolon": false,
    "rules": {
      "import/prefer-default-export": "off",
      "no-negated-condition": "off",
      "no-return-assign": ["off"],
      "indent": ["off"],
      "react/jsx-handler-names": ["off"],
      "react/jsx-indent-props": ["off"],
      "react/jsx-indent": ["off"],
      "react/require-default-props": ["off"],
      "react/default-props-match-prop-types": ["off"],
      "react/forbid-component-props": ["off"],
      "react/jsx-no-bind": ["off"],
      "unicorn/filename-case": ["off"]
    },
    "settings": {
      "react": {
        "version": "16.5.0"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": ["xo --fix", "prettier --write", "git add"],
    "*.{json,md}": ["prettier --write", "git add"]
  },
  "ava": {
    "files": ["**/test/**/*.tsx?"],
    "require": ["ts-node/register", "./tools/test-setup"],
    "babel": "inherit"
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "200 KB"
    }
  ]
}
