{
  "name": "@parishconnect/react-ui",
  "version": "1.6.2",
  "description": "React UI Kit for ParishConnect's webapp",
  "contributors": [
    "Evan Hennessy"
  ],
  "keywords": [
    "ui",
    "react"
  ],
  "repository": "https://github.com/parishconnect/react-ui",
  "license": "UNLICENSED",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "commonjs",
    "esm",
    "dist"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com/"
  },
  "sideEffects": false,
  "scripts": {
    "start": "yarn dev",
    "test": "yarn tsc --noEmit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepublishOnly": "yarn build",
    "dev": "start-storybook -p 6006",
    "coverage": "nyc report --reporter=html",
    "build-custom-icons": "node ./tools/build-icons-json.js",
    "generate-icons": "yarn build-custom-icons && ./tools/generate-icons.js",
    "create-package": "./tools/create-package.js",
    "create-package:components": "./tools/create-package-components.js",
    "create-docs-template": "./tools/create-docs-template.js",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore '**/stories','**/test' --source-maps inline --extensions '.js,.ts,.tsx'",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --ignore '**/stories','**/test' --source-maps inline --extensions '.js,.ts,.tsx'",
    "build-types": "tsc --declaration --emitDeclarationOnly",
    "build": "concurrently --names 'types,commonjs,esm' 'yarn build-types' 'yarn build-commonjs' 'yarn build-esm'",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "clean": "git clean -Xdf",
    "release": "np --no-publish --skip-cleanup",
    "chromatic": "chromatic test --storybook-addon --script-name dev --app-code=alj8xoz1ujt"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@emotion/core": "^10.0.27",
    "@parishconnect/box": "^2.3.0",
    "arrify": "^2.0.1",
    "date-fns": "^2.9.0",
    "downshift": "^5.0.3",
    "exenv": "^1.2.2",
    "feather-icons": "^4.26.0",
    "fuzzaldrin-plus": "^0.6.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.0.0",
    "react-autosize-textarea": "^7.0.0",
    "react-tiny-virtual-list": "^2.2.0",
    "react-transition-group": "^4.3.0",
    "tinycolor2": "^1.4.1",
    "utility-types": "^3.10.0",
    "uuid": "^3.4.0"
  },
  "peerDependencies": {
    "luxon": "^1.11.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@reactions/component": "^2.0.2",
    "@storybook/addon-actions": "^5.3.13",
    "@storybook/addon-links": "^5.3.13",
    "@storybook/addon-options": "^5.3.13",
    "@storybook/addon-viewport": "^5.3.13",
    "@storybook/addons": "^5.3.13",
    "@storybook/react": "^5.3.13",
    "@storybook/storybook-deployer": "^2.8.2",
    "@types/arrify": "^2.0.1",
    "@types/babel__core": "^7.1.5",
    "@types/cheerio": "^0.22.16",
    "@types/concurrently": "^5.1.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/exenv": "^1.2.0",
    "@types/faker": "^4.1.9",
    "@types/feather-icons": "^4.7.0",
    "@types/file-loader": "^4.2.0",
    "@types/fs-extra": "^8.1.0",
    "@types/fuzzaldrin-plus": "^0.6.0",
    "@types/html-minifier": "^3.5.3",
    "@types/lodash": "^4.14.149",
    "@types/lodash-webpack-plugin": "^0.11.3",
    "@types/luxon": "^1.21.0",
    "@types/prettier": "^1.19.0",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@types/react-loadable": "^5.5.3",
    "@types/react-test-renderer": "^16.9.2",
    "@types/react-transition-group": "^4.2.3",
    "@types/sinon": "^7.5.1",
    "@types/starwars-names": "^1.6.0",
    "@types/storybook__addon-options": "^5.2.1",
    "@types/storybook__react": "^5.2.1",
    "@types/tinycolor2": "^1.4.1",
    "@types/uuid": "^3.4.7",
    "@types/webpack": "^4.41.6",
    "ava": "^3.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-register": "^6.26.0",
    "cache-loader": "^4.1.0",
    "camelcase": "^5.0.0",
    "cheerio": "^1.0.0-rc.2",
    "concurrently": "^5.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.18.3",
    "execa": "^4.0.0",
    "faker": "^4.1.0",
    "file-loader": "^5.1.0",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "lodash-webpack-plugin": "^0.11.5",
    "luxon": "^1.22.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-chromatic": "^0.8.4",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "sinon": "^9.0.0",
    "size-limit": "^4.0.2",
    "starwars-names": "^1.6.0",
    "ts-node": "^8.6.2",
    "tsdx": "^0.12.3",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^4.2.0",
    "tslint-xo": "^0.16.0",
    "typescript": "^3.8.2",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.6",
    "xo": "^0.26.1"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "*.ts",
      "*.tsx"
    ],
    "prettier": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "object-curly-spacing": "off",
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "shorthandFirst": false,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.5.0"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "**/test/**/*.tsx?"
    ],
    "require": [
      "ts-node/register",
      "./tools/test-setup"
    ],
    "babel": "inherit"
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "200 KB"
    }
  ]
}
